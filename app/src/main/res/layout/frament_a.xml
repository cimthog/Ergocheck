<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trunk_grid"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Select Leg Position at work"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/neck_grid"
                android:layout_marginTop="32dp"
                android:text="Select Trunk Position at work"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginTop="12dp"
                android:text="Select Neck Position at work"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <GridView
                android:id="@+id/neck_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textView2"
                android:horizontalSpacing="10dp"
                android:listSelector="@drawable/image_overlay"
                android:numColumns="3"
                android:verticalSpacing="5dp">

            </GridView>

            <GridView
                android:id="@+id/leg_grid"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_below="@id/textView4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:columnWidth="100dp"
                android:listSelector="@drawable/image_overlay"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:verticalSpacing="5dp">


            </GridView>

            <GridView
                android:id="@+id/trunk_grid"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/textView3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:columnWidth="100dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@drawable/image_overlay"
                android:numColumns="3"
                android:verticalSpacing="5dp">


            </GridView>
            <TextView
                android:id="@+id/load_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leg_grid"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:text="Input the Load Size"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/load"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@+id/leg_grid"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/load_text"
                android:background="@mipmap/curve_background_white"
                android:hint="in Kg"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>