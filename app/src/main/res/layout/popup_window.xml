<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="Assesment Result"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreA"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="Score A :"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_toRightOf="@+id/scoreA"
        android:layout_marginTop="15dp"
        android:text="this is me"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/scoreB"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreA"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="Score B :"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreA"
        android:layout_toRightOf="@+id/scoreB"
        android:layout_marginTop="15dp"
        android:text="this is me"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/scorec"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreB"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="Score C :"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreB"
        android:layout_toRightOf="@+id/scoreA"
        android:layout_marginTop="15dp"
        android:text="this is me"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

        <TextView
            android:id="@+id/actText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/scorec"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:text="Activity Score:"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/actScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scorec"
            android:layout_toEndOf="@id/actText"
            android:layout_toRightOf="@id/actText"
            android:layout_marginTop="15dp"
            android:text="activity score "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


    <TextView
        android:id="@+id/reba_score"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/actScore"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="Final REBA Score :"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/r_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actScore"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/reba_score"
            android:paddingLeft="10dp"
            android:text="Final REBA Score :"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/recomend"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/reba_score"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:text="Recommendation:"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/txtR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reba_score"
        android:layout_toRightOf="@+id/recomend"
        android:layout_marginTop="15dp"
        android:text="this is me"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>